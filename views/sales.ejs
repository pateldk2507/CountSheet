    </div>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>

        const currentQuarterly = currentQuarterlyDates();

        let winPer=[];

        var xhr = new XMLHttpRequest();
            var url = '/sales/data';
            xhr.open('GET', url, true);
            xhr.onreadystatechange = function() {
                if (xhr.readyState == 4 && xhr.status == 200) {
                    salesData = JSON.parse(xhr.responseText);
                    console.log(salesData);
                    var totalByDavid=0;
                    var totalBySpencer=0;
                    var totalLastMonth = 0;

                    var Quarterly=[];
                    Quarterly[0] = 0;
                    Quarterly[1] = 0;
                    Quarterly[2] = 0;
                    Quarterly[3] = 0;

                    var PC = [];
                    PC[0] = 0;
                    PC[1] = 0;
                    PC[2] = 0;
                    PC[3] = 0;

                    let qStart = new Date(currentQuarterly.start);
                    let qEnd = new Date(currentQuarterly.end);
                    
                    (salesData.data).forEach(element => {
                        let date = new Date(element.OrderDate);
                        let today = new Date();
                        let currMonth = today.getMonth();
                        let OrderMonth = date.getMonth();

                        let currYear = today.getFullYear();
                        let orderYear = date.getFullYear();

                        if(element.GP != undefined && element.GP > 0){
                            
                            if(currMonth == OrderMonth && currYear == orderYear){

                                switch (element.CreatedBy) {
                                    case '13': totalBySpencer+= parseFloat(element.GP);break;
                                    case '20': totalByDavid+= parseFloat(element.GP);break;
                                           
                                    default: break;
                                }
                           
                            }else if((currMonth-1) == OrderMonth){
                                totalLastMonth += parseFloat(element.Revenue);
                                
                            }

                         
                            if(date>= qStart && date<= qEnd){
                              
                                switch(element.CreatedBy){
                                    case '20':  Quarterly[0] += parseFloat(element.GP); break;
                                    case '13':  Quarterly[1] += parseFloat(element.GP); break;
                                    case '33':  Quarterly[2] += parseFloat(element.GP); break;
                                    case '34':  Quarterly[3] += parseFloat(element.GP); break;
                                    default : break;
                                }
                                
                            }
                            if(date>= new Date('01 Jan '+currYear) && date<= new Date('31 Dec '+currYear)){
                                switch(element.CreatedBy){
                                        case '20':  PC[0] += parseFloat(element.GP); break;
                                        case '13':  PC[1] += parseFloat(element.GP); break;
                                        case '33':  PC[2] += parseFloat(element.GP); break;
                                        case '34':  PC[3] += parseFloat(element.GP); break;
                                        default : break;
                                    }
                            }


                        }
                            
                    });

                    document.getElementById('DavidMonth').innerHTML = formatCurrency(totalByDavid);
                    document.getElementById('SpencerMonth').innerHTML = formatCurrency(totalBySpencer);
                 
                  

                    document.getElementById('totalthisMonth').innerHTML = formatCurrency(totalByDavid + totalBySpencer);
                    document.getElementById('TotalLastMonth').innerHTML = formatCurrency(totalLastMonth);

                    // David 
                    document.getElementById('DavidMProgress').style.width = ((totalByDavid*100)/13833.33).toFixed(0) + '%';
                    document.getElementById('DavidM2Progress').innerText = formatCurrency(totalByDavid) + ' (' + ((totalByDavid*100)/13833.33).toFixed(0) + '%)';

                    document.getElementById('DavidQProgress').style.width = ((Quarterly[0]*100)/41500).toFixed(0) + '%';
                    document.getElementById('DavidQ2Progress').innerText = formatCurrency(Quarterly[0]) + ' (' + ((Quarterly[0]*100)/41500).toFixed(0) + '%)';

                    document.getElementById('DavidPCProgress').style.width = ((PC[0]*100)/166000).toFixed(0) + '%';
                    document.getElementById('DavidPC2Progress').innerText = formatCurrency(PC[0]) + ' (' + ((PC[0]*100)/166000).toFixed(2) + '%)';

                    // Spencer 
                    document.getElementById('SpencerMProgress').style.width = ((totalBySpencer*100)/28333).toFixed(0) + '%';
                    document.getElementById('SpencerM2Progress').innerText = formatCurrency(totalBySpencer) + ' (' + ((totalBySpencer*100)/28333).toFixed(0) + '%)';

                    document.getElementById('SpencerQProgress').style.width = ((Quarterly[1]*100)/85500).toFixed(0) + '%';
                    document.getElementById('SpencerQ2Progress').innerText = formatCurrency(Quarterly[1]) + ' (' + ((Quarterly[1]*100)/85500).toFixed(0) + '%)';

                    document.getElementById('SpencerPCProgress').style.width = ((PC[1]*100)/340000).toFixed(0) + '%';
                    document.getElementById('SpencerPC2Progress').innerText = formatCurrency(PC[1]) + ' (' + ((PC[1]*100)/340000).toFixed(2) + '%)';

                    

                  
                   calculateWinRate(salesData)
                        if(winPer[0].CreatedBy == '13'){
                            document.getElementById('SpencerWinRate').style.width = winPer[0].Percentage;
                            document.getElementById('SpencerWinRatePer').innerText = winPer[0].Percentage;
                        }
                        if(winPer[1].CreatedBy == '20'){
                            document.getElementById('DavidWinRate').style.width = winPer[1].Percentage;
                            document.getElementById('DavidWinRatePer').innerText = winPer[1].Percentage;
                        }

                    console.log(winPer);
                    

                
                    
                }
            };
            xhr.send();
      
            function calculateWinRate(data){
                (data.quote).forEach(element => {
                    let a = (element.TotalSO * 100 )/ element.TotalQuote;
                    
                    winPer.push({CreatedBy : element.CreatedBy, Percentage : a.toFixed(2) +'%'});
                });
            }
            function formatCurrency(params) {
                return params.toLocaleString('en-US',{style: 'currency', currency : 'USD'});
            }
            function currentQuarterlyDates() {
                const currentDate = new Date();
                const currentYear = currentDate.getFullYear();
                const currentMonth = currentDate.getMonth();
            
                const startMonth = [0, 3, 6, 9]; 
                let QuarterlyIndex;
                if (currentMonth >= 0 && currentMonth < 3) {
                    QuarterlyIndex = 0; 
                } else if (currentMonth >= 3 && currentMonth < 6) {
                    QuarterlyIndex = 1; 
                } else if (currentMonth >= 6 && currentMonth < 9) {
                    QuarterlyIndex = 2; 
                } else {
                    QuarterlyIndex = 3; 
                }
                const startDate = new Date(currentYear, startMonth[QuarterlyIndex], 1);
                let endDate;
                if (QuarterlyIndex === 0) { 
                    endDate = new Date(currentYear, 2, startDate.getDate() === 29 ? 31 : 30); 
                } else if (QuarterlyIndex === 1) { 
                    endDate = new Date(currentYear, 5, 30); 
                } else if (QuarterlyIndex === 2) { 
                    endDate = new Date(currentYear, 8, 30); 
                } else { 
                    endDate = new Date(currentYear, 11, 31); 
                }
                return {
                    start: startDate.toDateString(),
                    end: endDate.toDateString()
                };
            }

            const currentTime = new Date().toLocaleString();
            document.getElementById('lastRefresh').innerText = `Last Refresh Time: ${currentTime}`;
    </script>
