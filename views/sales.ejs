    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <style>
        * {
            margin: 0;
            padding: 0;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0a0e27 0%, #1a1f3a 100%);
            color: #e8eef5;
            min-height: 100vh;
            padding-bottom: 2rem;
        }

        .header-section {
            background: linear-gradient(135deg, #1a1f3a 0%, #2d3561 100%);
            /* padding: 3rem 0; */
            padding: 5px;
            /* margin-bottom: 3rem; */
            border-bottom: 2px solid #ffd700;
            box-shadow: 0 4px 15px rgba(255, 215, 0, 0.1);
        }

        .header-section h1 {
            color: #ffd700;
            font-weight: 700;
            font-size: 2.5rem;
            letter-spacing: 1px;
            margin-bottom: 0.5rem;
        }

        .header-section p {
            color: #a0b0d0;
            font-size: 1.1rem;
        }

        .card {
            border: none;
            border-radius: 15px;
            background: linear-gradient(135deg, #1a1f3a 0%, #252d4a 100%);
            color: #e8eef5;
            margin-top: 1.5rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: all 0.3s ease;
            border-left: 4px solid #ffd700;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(255, 215, 0, 0.15);
        }

        .card-body {
            padding: 20px;
        }

        .main-metric-card {
            border-left: 6px solid #ffd700;
        }

        .main-metric-card .card-body {
            /* padding: 2.5rem; */
            text-align: center;
        }

        .metric-title {
            color: #ffd700;
            font-size: 1.1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 1rem;
        }

        .metric-value {
            color: #4ade80;
            font-size: 2.5rem;
            font-weight: 700;
            text-shadow: 0 2px 10px rgba(74, 222, 128, 0.2);
        }

        .goal-section {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: rgba(255, 215, 0, 0.05);
            border-radius: 10px;
            border-left: 3px solid #ffd700;
        }

        .goal-label {
            color: #0dcaf0;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .progress {
            height: 8px;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.1);
            overflow: hidden;
            margin-bottom: 0.5rem;
        }

        .progress-bar {
            background: linear-gradient(90deg, #ffd700 0%, #ffed4e 100%);
            height: 100%;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 215, 0, 0.3);
            transition: width 0.6s ease;
        }

        .progress-text {
            font-size: 20px;
            color: #ffffff;
            margin-top: 0.5rem;
            font-weight: 500;
        }

        .person-name {
            color: #e8eef5;
            font-size: 1.3rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .sub-title {
            color: #a0b0d0;
            font-size: 0.95rem;
            margin-bottom: 1.5rem;
        }

        .sales-column {
            margin-bottom: 2rem;
        }

        .top-cards {
            margin-bottom: 3rem;
        }

        .top-metric {
            text-align: center;
        }

        .top-metric .metric-title {
            font-size: 0.9rem;
            margin-bottom: 0.8rem;
        }

        .top-metric .metric-value {
            font-size: 2.2rem;
        }

        footer {
            text-align: center;
          
            border-top: 1px solid rgba(255, 215, 0, 0.2);
        }

        footer small {
            color: #7a8ba8;
            font-size: 0.9rem;
        }

        #lastRefresh {
            color: #ffd700;
            font-weight: 600;
            font-size: 0.95rem !important;
        }

        .container {
            padding: 0 1rem;
        }

        @media (max-width: 768px) {
            .header-section h1 {
                font-size: 2rem;
            }

            .metric-value {
                font-size: 2rem;
            }

            .card-body {
                padding: 1.5rem;
            }
        }
    </style>

    <script>
         setInterval(function() {
            window.location.reload();
        }, 1800000); //Refresh page in 30 minutes

       
    </script>
  </head>
  
  <body>
